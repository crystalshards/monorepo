# Database Configuration
DATABASE_URL=postgres://postgres:password@localhost/crystalshards_development
DOCS_DATABASE_URL=postgres://postgres:password@localhost/crystaldocs_development
GIGS_DATABASE_URL=postgres://postgres:password@localhost/crystalgigs_development

# Redis Configuration
REDIS_URL=redis://localhost:6379

# GitHub Integration
GITHUB_TOKEN=your_github_token_here
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here

# Stripe Configuration (for CrystalGigs)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# MinIO Configuration (for documentation storage)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=crystaldocs

# Email Configuration
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
FROM_EMAIL=noreply@crystalshards.org

# Application Settings
SECRET_KEY_BASE=your_secret_key_base_here
DOMAIN=localhost
SHARDS_REGISTRY_PORT=3000
DOCS_PORT=3001
GIGS_PORT=3002
WORKER_CONCURRENCY=5

# Development/Production
CRYSTAL_ENV=development
LOG_LEVEL=DEBUG

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600

# Search Configuration
SEARCH_INDEX_TYPE=database  # options: database, redis, elasticsearch

# Documentation Build Settings
DOC_BUILD_TIMEOUT=300
DOC_MAX_FILE_SIZE=10485760  # 10MB
DOC_ALLOWED_EXTENSIONS=.cr,.md,.yml,.yaml,.json